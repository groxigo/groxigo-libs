{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "declaration": true,
    "declarationMap": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "rootDir": "src"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "src/**/*.stories.tsx", "src/**/*.test.tsx", "src/**/__tests__/**", "**/*.stories.tsx", "**/*.test.tsx", "**/__tests__", "vitest.config.ts", "vitest.setup.ts"]
}
