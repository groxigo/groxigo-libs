{
  "name": "@groxigo/tokens",
  "version": "1.0.1",
  "description": "Groxigo Design Tokens - Production-grade design tokens with three-tier architecture for iOS, Android, and Web",
  "main": "src/index.ts",
  "module": "src/index.ts",
  "types": "src/index.ts",
  "sideEffects": false,
  "exports": {
    ".": {
      "import": "./src/index.ts",
      "require": "./src/index.ts",
      "types": "./src/index.ts"
    },
    "./colors": {
      "import": "./src/tokens/colors.ts",
      "require": "./src/tokens/colors.ts",
      "types": "./src/tokens/colors.ts"
    },
    "./spacing": {
      "import": "./src/tokens/spacing.ts",
      "require": "./src/tokens/spacing.ts",
      "types": "./src/tokens/spacing.ts"
    },
    "./typography": {
      "import": "./src/tokens/typography.ts",
      "require": "./src/tokens/typography.ts",
      "types": "./src/tokens/typography.ts"
    },
    "./animation": {
      "import": "./src/tokens/animation.ts",
      "require": "./src/tokens/animation.ts",
      "types": "./src/tokens/animation.ts"
    },
    "./theme": {
      "import": "./src/theme/index.ts",
      "require": "./src/theme/index.ts",
      "types": "./src/theme/index.ts"
    },
    "./utils": {
      "import": "./src/utils/index.ts",
      "require": "./src/utils/index.ts",
      "types": "./src/utils/index.ts"
    },
    "./web": {
      "import": "./src/platforms/web.ts",
      "require": "./src/platforms/web.ts",
      "types": "./src/platforms/web.ts"
    },
    "./react-native": {
      "import": "./src/platforms/react-native.ts",
      "require": "./src/platforms/react-native.ts",
      "types": "./src/platforms/react-native.ts"
    },
    "./css": "./dist/css/tokens.css",
    "./css/min": "./dist/css/tokens.min.css",
    "./css/modules": "./dist/css/tokens.module.css",
    "./scss": "./dist/scss/_tokens.scss",
    "./json": "./dist/json/tokens.json",
    "./json/flat": "./dist/json/tokens.flat.json",
    "./preview": "./src/preview/index.html"
  },
  "typesVersions": {
    "*": {
      "colors": [
        "src/tokens/colors.ts"
      ],
      "spacing": [
        "src/tokens/spacing.ts"
      ],
      "typography": [
        "src/tokens/typography.ts"
      ],
      "animation": [
        "src/tokens/animation.ts"
      ],
      "theme": [
        "src/theme/index.ts"
      ],
      "utils": [
        "src/utils/index.ts"
      ],
      "web": [
        "src/platforms/web.ts"
      ],
      "react-native": [
        "src/platforms/react-native.ts"
      ]
    }
  },
  "scripts": {
    "build": "bun run src/build.ts",
    "build:watch": "bun run --watch src/build.ts",
    "clean": "rm -rf dist",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "preview": "open src/preview/index.html || xdg-open src/preview/index.html",
    "lint": "eslint src --ext .ts",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "bun run clean && bun run build && bun run test"
  },
  "keywords": [
    "design-tokens",
    "design-system",
    "react-native",
    "expo",
    "css",
    "scss",
    "figma",
    "theming",
    "dark-mode",
    "accessibility",
    "wcag",
    "typescript"
  ],
  "author": "Groxigo",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/groxigo/groxigo-libs.git",
    "directory": "packages/tokens"
  },
  "homepage": "https://github.com/groxigo/groxigo-libs/tree/main/packages/tokens#readme",
  "bugs": {
    "url": "https://github.com/groxigo/groxigo-libs/issues"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com",
    "access": "public"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "devDependencies": {
    "@types/node": "^22.15.0",
    "@vitest/coverage-v8": "^3.0.0",
    "typescript": "^5.9.3",
    "vitest": "^3.0.0"
  },
  "peerDependencies": {
    "typescript": ">=4.7.0"
  },
  "peerDependenciesMeta": {
    "typescript": {
      "optional": true
    }
  },
  "files": [
    "src",
    "dist",
    "README.md",
    "CHANGELOG.md"
  ]
}
