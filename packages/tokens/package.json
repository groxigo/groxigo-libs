{
  "name": "@groxigo/tokens",
  "version": "1.1.1",
  "description": "Groxigo Design Tokens - Production-grade design tokens with three-tier architecture for iOS, Android, and Web",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "sideEffects": [
    "./dist/css/tokens.css",
    "./dist/css/tokens.min.css"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./colors": {
      "types": "./dist/tokens/colors.d.ts",
      "import": "./dist/tokens/colors.js"
    },
    "./spacing": {
      "types": "./dist/tokens/spacing.d.ts",
      "import": "./dist/tokens/spacing.js"
    },
    "./typography": {
      "types": "./dist/tokens/typography.d.ts",
      "import": "./dist/tokens/typography.js"
    },
    "./animation": {
      "types": "./dist/tokens/animation.d.ts",
      "import": "./dist/tokens/animation.js"
    },
    "./theme": {
      "types": "./dist/theme/index.d.ts",
      "import": "./dist/theme/index.js"
    },
    "./utils": {
      "types": "./dist/utils/index.d.ts",
      "import": "./dist/utils/index.js"
    },
    "./web": {
      "types": "./dist/platforms/web.d.ts",
      "import": "./dist/platforms/web.js"
    },
    "./react-native": {
      "types": "./dist/platforms/react-native.d.ts",
      "import": "./dist/platforms/react-native.js"
    },
    "./css": "./dist/css/tokens.css",
    "./css/min": "./dist/css/tokens.min.css",
    "./css-vars": {
      "types": "./dist/types/css-vars.d.ts"
    }
  },
  "typesVersions": {
    "*": {
      "colors": [
        "dist/tokens/colors.d.ts"
      ],
      "spacing": [
        "dist/tokens/spacing.d.ts"
      ],
      "typography": [
        "dist/tokens/typography.d.ts"
      ],
      "animation": [
        "dist/tokens/animation.d.ts"
      ],
      "theme": [
        "dist/theme/index.d.ts"
      ],
      "utils": [
        "dist/utils/index.d.ts"
      ],
      "web": [
        "dist/platforms/web.d.ts"
      ],
      "react-native": [
        "dist/platforms/react-native.d.ts"
      ],
      "css-vars": [
        "dist/types/css-vars.d.ts"
      ]
    }
  },
  "scripts": {
    "build": "tsc -p tsconfig.build.json && bun run src/build.ts",
    "build:watch": "bun run --watch src/build.ts",
    "clean": "rm -rf dist",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "preview": "open src/preview/index.html || xdg-open src/preview/index.html",
    "lint": "eslint src --ext .ts",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "bun run clean && bun run build && bun run test"
  },
  "keywords": [
    "design-tokens",
    "design-system",
    "react-native",
    "expo",
    "css",
    "figma",
    "theming",
    "dark-mode",
    "accessibility",
    "wcag",
    "typescript"
  ],
  "author": "Groxigo",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/groxigo/groxigo-libs.git",
    "directory": "packages/tokens"
  },
  "homepage": "https://github.com/groxigo/groxigo-libs/tree/main/packages/tokens#readme",
  "bugs": {
    "url": "https://github.com/groxigo/groxigo-libs/issues"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com",
    "access": "public"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "devDependencies": {
    "@types/node": "^25.0.0",
    "@vitest/coverage-v8": "^4.0.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.0"
  },
  "peerDependencies": {
    "typescript": ">=4.7.0"
  },
  "peerDependenciesMeta": {
    "typescript": {
      "optional": true
    }
  },
  "files": [
    "dist",
    "!dist/docs",
    "!dist/json",
    "!dist/scss",
    "!dist/css/tokens.module.css",
    "README.md",
    "CHANGELOG.md"
  ]
}
