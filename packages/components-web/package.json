{
  "name": "@groxigo/components-web",
  "version": "1.2.2",
  "description": "Groxigo Composite Components for Web - Built on ui-elements-web",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsc && find src -name '*.css' -exec sh -c 'mkdir -p dist/$(dirname ${1#src/}) && cp $1 dist/${1#src/}' _ {} \\;",
    "build:watch": "tsc --watch",
    "clean": "rm -rf dist",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "keywords": [
    "react",
    "css-modules",
    "ui",
    "components",
    "web",
    "groxigo"
  ],
  "author": "Groxigo",
  "license": "MIT",
  "sideEffects": false,
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/groxigo/groxigo-libs.git",
    "directory": "packages/components-web"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "dependencies": {
    "@groxigo/tokens": "^1.0.2",
    "@groxigo/contracts": "^1.2.2",
    "@groxigo/icons": "^1.0.1",
    "@groxigo/ui-elements-web": "^1.2.2",
    "clsx": "^2.1.1",
    "lottie-react": "^2.4.0"
  },
  "peerDependencies": {
    "react": ">=19.0.0",
    "react-dom": ">=19.0.0"
  },
  "devDependencies": {
    "@testing-library/react": "^16.3.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/user-event": "^14.5.2",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.2.3",
    "@vitest/coverage-v8": "^3.0.0",
    "jsdom": "^25.0.0",
    "typescript": "~5.9.2",
    "vitest": "^3.0.0"
  },
  "files": [
    "dist"
  ]
}
