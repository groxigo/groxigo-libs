{
  "name": "@groxigo/ui-elements",
  "version": "1.0.1",
  "description": "Groxigo UI Elements - Primitive building blocks for cross-platform UI components",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "module": "src/index.ts",
  "exports": {
    ".": {
      "import": "./src/index.ts",
      "require": "./dist/index.js",
      "types": "./src/index.ts"
    }
  },
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run clean && npm run build"
  },
  "keywords": [
    "react-native",
    "ui",
    "components",
    "cross-platform",
    "groxigo"
  ],
  "author": "Groxigo",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/groxigo/groxigo-libs.git",
    "directory": "packages/ui-elements"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "dependencies": {
    "@groxigo/contracts": "*",
    "@groxigo/tokens": "*",
    "@groxigo/ui-core": "*"
  },
  "peerDependencies": {
    "react": ">=18.3.1",
    "react-native": ">=0.76.0",
    "@expo/vector-icons": ">=14.0.0",
    "expo-symbols": ">=0.2.0"
  },
  "peerDependenciesMeta": {
    "@expo/vector-icons": {
      "optional": true
    },
    "expo-symbols": {
      "optional": true
    }
  },
  "devDependencies": {
    "@types/react": "~19.1.0",
    "typescript": "~5.9.2"
  },
  "files": [
    "src",
    "dist",
    "README.md"
  ]
}
