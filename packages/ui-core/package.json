{
  "name": "@groxigo/ui-core",
  "version": "1.0.1",
  "description": "Shared UI utilities, hooks, and animation configs for cross-platform components",
  "main": "dist/index.js",
  "module": "src/index.ts",
  "types": "src/index.ts",
  "exports": {
    ".": {
      "import": "./src/index.ts",
      "require": "./dist/index.js",
      "types": "./src/index.ts"
    },
    "./hooks": {
      "import": "./src/hooks/index.ts",
      "types": "./src/hooks/index.ts"
    },
    "./animation": {
      "import": "./src/animation/index.ts",
      "types": "./src/animation/index.ts"
    },
    "./utils": {
      "import": "./src/utils/index.ts",
      "types": "./src/utils/index.ts"
    }
  },
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "clean": "rm -rf dist",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "keywords": [
    "design-system",
    "ui-core",
    "hooks",
    "animation",
    "cross-platform"
  ],
  "author": "Groxigo",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/groxigo/groxigo-libs.git",
    "directory": "packages/ui-core"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "peerDependencies": {
    "react": "^19.1.0"
  },
  "dependencies": {
    "@groxigo/contracts": "*",
    "@groxigo/tokens": "*"
  },
  "devDependencies": {
    "@testing-library/react": "^16.3.0",
    "@types/react": "^19.0.0",
    "@vitest/coverage-v8": "^3.0.0",
    "jsdom": "^25.0.0",
    "react-native": "^0.83.1",
    "typescript": "~5.9.2",
    "vitest": "^3.0.0"
  },
  "files": [
    "src",
    "dist"
  ]
}
