{
  "name": "@groxigo/contracts",
  "version": "1.0.1",
  "description": "Shared component contracts for cross-platform UI consistency",
  "main": "dist/index.js",
  "module": "src/index.ts",
  "types": "src/index.ts",
  "exports": {
    ".": {
      "import": "./src/index.ts",
      "require": "./dist/index.js",
      "types": "./src/index.ts"
    },
    "./elements": {
      "import": "./src/elements/index.ts",
      "types": "./src/elements/index.ts"
    },
    "./components": {
      "import": "./src/components/index.ts",
      "types": "./src/components/index.ts"
    },
    "./animation": {
      "import": "./src/animation/index.ts",
      "types": "./src/animation/index.ts"
    },
    "./components/*": {
      "import": "./src/components/*.ts",
      "types": "./src/components/*.ts"
    },
    "./elements/*": {
      "import": "./src/elements/*.ts",
      "types": "./src/elements/*.ts"
    }
  },
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "design-system",
    "contracts",
    "types",
    "cross-platform"
  ],
  "author": "Groxigo",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/groxigo/groxigo-libs.git",
    "directory": "packages/contracts"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "devDependencies": {
    "@types/react": "^19.2.9",
    "typescript": "~5.9.2"
  },
  "files": [
    "src",
    "dist"
  ]
}
